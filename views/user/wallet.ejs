
  <div class="container">
    <h1>Welcome to Your Wallet</h1>

    

    <div class="add-amount-form">
      <h2>Add Funds</h2>
      <div class="form-group">
        <label for="amount">Amount (Rs.)</label>
        <input type="number" id="amount" placeholder="Enter amount" min="1" step="0.01">
      </div>
      <button class="add-button" id="addFundsBtn">Add Amount</button>
      <div id="addFundsMessage" class="message"></div>
    </div>

    <div class="transaction-history">
      <h2>Transaction History</h2>
      <% if (transactions.length > 0) { %>
        <table>
          <thead>
            <tr>
              <th>#</th>
              <th>Amount</th>
              <th>Type</th>
              <th>Date</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% transactions.forEach((transaction, index) => { %>
              <tr>
                <td><%= (currentPage - 1) * 10 + index + 1 %></td>
                <td>Rs.<%= transaction.amount.toFixed(2) %></td>
                <td><span class="<%= transaction.type.toLowerCase() %>"><%= transaction.type %></span></td>
                <td><%= new Date(transaction.createdAt).toLocaleString() %></td>
                <td><span class="status-<%= transaction.status %>"><%= transaction.status %></span></td>
              </tr>
            <% }); %>
          </tbody>
        </table>

        <div class="pagination">
          <% if (currentPage > 1) { %>
            <a href="/wallet?page=<%= currentPage - 1 %>">← Previous</a>
          <% } %>
          
          <% for(let i = 1; i <= totalPages; i++) { %>
            <a href="/wallet?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
          <% } %>
          
          <% if (currentPage < totalPages) { %>
            <a href="/wallet?page=<%= currentPage + 1 %>">Next →</a>
          <% } %>
        </div>
      <% } else { %>
        <p class="no-transactions">No transactions found</p>
      <% } %>
    </div>
  </div>

  