
<div class="cart-container">
  <h2 class="cart-title">CART</h2>
  <div class="cart-table">
    <% if (cartItems && cartItems.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>PRODUCT</th>
                        <th>NAME</th>

            <th>PRICE</th>
            <th>QUANTITY</th>
            <th>TOTAL</th>
          </tr>
        </thead>
      <tbody id="cart-items">
  <% cartItems.forEach(item => { %>
    <pre><%= JSON.stringify(item._id) %></pre>

    <tr data-id="<%= item._id %>">
      <td>
        <button class="delete-btn" onclick="removeItem('<%= item._id %>')">
          <i class="fas fa-trash"></i>
        </button>
      </td>

      <td class="product-info">
        <img src="<%= item.productId.images[0] %>" alt="<%= item.name %>" class="product-img">
        <span><%= item.name %></span>
        <% if (!item.productId.isActive) { %>
          <p class="text-red">This product is not currently available</p>
        <% } %>
      </td>
        <td>
          <span class ="item-name"><%=item.productId.productName%></span>
        </td>

      <% if (item.productId.isActive) { %>
        <td>Rs. <span class="item-price"><%= item.price %></span></td>
        <td>
          <div class="quantity-selector" data-id="<%= item._id %>" data-stock="<%= item.productId.stock %>">
            <button onclick="updateQuantity('<%= item._id %>', -1)">-</button>
            <input type="number" class="quantity-input" value="<%= item.quantity %>" min="1" max="<%= item.productId.stock %>"
              onchange="updateQuantityInput('<%= item._id %>', this.value)">
            <button onclick="updateQuantity('<%= item._id %>', 1)">+</button>
          </div>
        </td>
        <td>Rs. <span class="item-total"><%= item.price * item.quantity %></span></td>
      <% } else { %>
        <td colspan="3" style="color: gray;">Unavailable</td>
      <% } %>
    </tr>
  <% }); %>
</tbody>

      </table>

      <div class="cart-buttons">
        <button class="continue-btn" onclick="window.location.href='/user/shopall'">
          <i class="fas fa-arrow-left"></i> Continue Shopping
        </button>
        <!-- <button class="update-btn" onclick="updateCart()">
          <i class="fas fa-sync-alt"></i> Update Cart
        </button> -->
      </div>

      <div class="cart-total">
        <span>Total:</span>
        <strong>Rs. <span id="grand-total"><%= total %></span></strong>
      </div>

      <div class="checkout-btn-container">
<a href="/checkout" class="checkout-btn">
          <i class="fas fa-lock"></i> Proceed to Checkout
        </a>
      </div>
    <% } else { %>
      <div class="empty-cart">
        <i class="fas fa-shopping-cart fa-3x"></i>
        <h3>Your cart is empty</h3>
        <button class="continue-btn" onclick="window.location.href='/user/shopall'">
          <i class="fas fa-arrow-left"></i> Continue Shopping
        </button>
      </div>
    <% } %>
  </div>
</div>
<% if (showStockAlert && outOfStockItems) { %>
  <div class="stock-alert mb-5">
    <div class="alert-header">
      <i class="bi bi-exclamation-circle-fill"></i>
      <h4>We've updated your cart</h4>
    </div>
    
    <div class="alert-body">
      <p>These items were removed due to limited availability:</p>
      
      <div class="stock-items">
        <% outOfStockItems.forEach(item => { %>
          <div class="stock-item">
            <div class="item-info">
              <span class="item-name"><%= item.name %></span>
              <div class="stock-details">
                <span class="available">Available: <%= item.available %></span>
                <span class="requested">Your selection: <%= item.requested %></span>
              </div>
            </div>
            <% if (item.available > 0) { %>
              <a href="/product/<%= item.productId %>" class="update-btn">
                Add Available Quantity
              </a>
            <% } else { %>
              <span class="out-of-stock-badge">Out of Stock</span>
            <% } %>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
<% } %>