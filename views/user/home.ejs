      <p>Explore our exquisite collections</p>
    </div>
    <div class="category-grid">
  <% categories.forEach(category => { %>
    <div class="category-card">
      <img src="<%= category.img %>" alt="<%= category.name %> Saree">
      <div class="overlay">
        <p><%= category.name %></p>
        <button class="secondary-btn">View Collection</button>
      </div>
    </div>
  <% }); %>
</div>

