
<section class="hero">
  <div class="hero-text">
    <h1>Let your spirit soar, draped in the ethereal beauty of a saree.</h1>
    <p>
      Discover handcrafted sarees that celebrate tradition with contemporary
      elegance
    </p>
    <!-- <button class="primary-btn">Shop Now</button> -->
  <a href="/user/shopall" class="primary-btn">Shop Now</a>

  </div>
  <div class="hero-img">
    <img
      src="/img/banner/banner3.jpg"
      alt="Elegant woman wearing traditional saree"
    />
  </div>
</section>


<section class="categories">
  <div class="section-header">
    <h2>Shop By Categories</h2>
    <p>Explore our exquisite collections</p>
  </div>
 <div class="category-grid">
  <% categories.forEach(category => { 
       if (category.status === "active") { %>
    <a href="/shopall/category/<%= category._id %>" class="category-card-link">
      <div class="category-card">
        <img src="<%= category.image %>" alt="<%= category.name %> Saree" />
        <div class="overlay">
          <p><%= category.name %></p>
<button class="secondary-btn" onclick="window.location.href='/user/shopall'">View Collection</button>
        </div>
      </div>
    </a>
  <% } }); %>
</div>

</section>


<section class="new-arrivals">
  <div class="section-header">
    <h2>New Arrivals</h2>
    <p>Our Best Picks This Season</p>
  </div>
  <div class="arrival-grid">
    <% products.forEach(product => { %>
      <div class="product-card">
        <a href="/user/product/<%= product._id %>" class="product-link">
          <img src="<%= product.images[0] ? '/' + product.images[0] : '/img/placeholder.jpg' %>" alt="<%= product.productName %>" />
          <div class="product-info">
            <p><%= product.productName %></p>
            <p class="price">â‚¹<%= product.price %></p>
            </a>
            <div class="product-actions">
              <button class="icon-btn"><i class="far fa-heart"></i></button>
              <button class="icon-btn"><i class="fas fa-shopping-bag"></i></button>
            </div>
          </div>
        
      </div>
    <% }); %>
  </div>

  <div class="button-container" style="text-align: center; margin-top: 30px;">
    <a href="/user/shopall" class="primary-btn outline">View All Collections</a>
  </div>
</section>

<section class="testimonial">
  <div class="testimonial-content">
    <i class="fas fa-quote-left"></i>
    <p>
      Each saree from Chettinad tells a story of craftsmanship and heritage.
      Wearing them makes me feel connected to my roots while looking
      effortlessly elegant.
    </p>
    <div class="author">
      <img src="/img/customer.jpg" alt="Happy Customer" />
      <p>Priya Nair</p>
      <p>Loyal Customer</p>
    </div>
  </div>
</section>


