<%- include('../partials/admin/admin-header') %>
<div class="page-header">
  <div class="page-title">
    <h1>Dashboard</h1>
    <p>Overview of your store performance</p>
  </div>
  
  <div class="breadcrumb">
    <a href="/admin/dashboard">Home</a>
    <span class="divider">/</span>
    <span>Dashboard</span>
  </div>
</div>

<!-- Dashboard Content -->
<div class="dashboard-content">
  <!-- Dashboard Top Cards -->
  <div class="dashboard-stats">
    <div class="stat-card pink">
      <h4><i class="fas fa-users"></i> Total Users</h4>
      <p>29</p>
    </div>
    <div class="stat-card purple">
      <h4><i class="fas fa-box"></i> Items Sold</h4>
      <p>19</p>
    </div>
    <div class="stat-card blue">
      <h4><i class="fas fa-rupee-sign"></i> Total Sales</h4>
      <p>₹ 998,156</p>
    </div>
    <div class="stat-card violet">
      <h4><i class="fas fa-clock"></i> Pending Orders</h4>
      <p>12</p>
    </div>
    <button class="pdf-btn">PDF <i class="fas fa-file-pdf"></i></button>
  </div>

  <!-- Top Sold Products Table -->
  <div class="dashboard-table">
    <h2>Top Sold Products</h2>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Product Image</th>
          <th>Product Name</th>
          <th>Amount</th>
          <th>Revenue</th>
          <th>Qty Sold</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>#1025</td>
          <td><img src="/images/products/1.jpg" alt="Product"></td>
          <td>Purple Chikankari Saree</td>
          <td>₹2,200</td>
          <td>₹2,200</td>
          <td>1</td>
        </tr>
        <tr>
          <td>#1026</td>
          <td><img src="/images/products/2.jpg" alt="Product"></td>
          <td>Green Kanchipuram Silk</td>
          <td>₹5,200</td>
          <td>₹15,600</td>
          <td>3</td>
        </tr>
        <tr>
          <td>#1027</td>
          <td><img src="/images/products/3.jpg" alt="Product"></td>
          <td>Beige Kalamkari</td>
          <td>₹1,600</td>
          <td>₹8,000</td>
          <td>5</td>
        </tr>
        <tr>
          <td>#1028</td>
          <td><img src="/images/products/4.jpg" alt="Product"></td>
          <td>Peach Georgette Saree</td>
          <td>₹6,000</td>
          <td>₹12,000</td>
          <td>2</td>
        </tr>
      </tbody>
    </table>

    <div class="pagination">
      <span><</span>
      <span class="active">1</span>
      <span>2</span>
      <span>3</span>
      <span>></span>
    </div>
  </div>

  <!-- Sales Chart -->
  <div class="dashboard-chart">
    <h2>Sales Overview</h2>
    <canvas id="salesChart"></canvas>
  </div>
</div>
<%- include('../partials/admin/admin-footer') %>